<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookingRide">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="10dp"
            android:onClick="backButton"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            android:gravity="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:gravity="left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="12dp"
            android:layout_marginLeft="250dp"
            android:gravity="left" />

    </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_autorenew_black_24dp"
            android:textColor="@color/colorPrimary" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:gravity="left" />


        <TextView
            android:id="@+id/locationnameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="200dp"
            android:gravity="left" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="______________________________________________________________"
        android:textColor="@color/colorBlack"
        android:gravity="left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="50dp"
            android:drawableEnd="@drawable/ic_today_black_24dp"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="12dp"
            android:layout_marginLeft="160dp"
            android:gravity="left" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="50dp"
            android:drawableEnd="@drawable/ic_today_black_24dp"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/datetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="15dp"
            android:onClick="Selectdate"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:gravity="left" />


        <TextView
            android:id="@+id/selectTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:onClick="Selecttime"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="200dp"
            android:gravity="left" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="______________________________________________________________"
        android:textColor="@color/colorBlack"
        android:gravity="left" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasengers"
        android:layout_marginLeft="15dp"
        android:gravity="left" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADULTS"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:gravity="left" />


        <NumberPicker
            android:id="@+id/numberPicker1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHILDREN"
            android:onClick="Selecttime"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:gravity="left" />

        <NumberPicker
            android:id="@+id/numberPicker2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12+ years"
            android:layout_marginLeft="15dp"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-12 years"
            android:layout_marginLeft="155dp"
            android:gravity="left" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="______________________________________________________________"
        android:textColor="@color/colorBlack"
        android:gravity="left" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drivers Gender"
        android:layout_marginLeft="15dp"
        android:gravity="left" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
           android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Male"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            app:icon="@drawable/mars"
            android:onClick="maleButton"
            app:iconGravity="start"
            app:iconTint="@color/colorPrimary"
            android:backgroundTint="@color/colorWhite"
            app:cornerRadius="20dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/femalebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Female"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            app:icon="@drawable/woman"
            app:iconGravity="start"
            android:onClick="femaleButton"
            app:iconTint="@color/colorPrimary"
            android:backgroundTint="@color/colorWhite"
            app:cornerRadius="20dp"
            android:layout_marginStart="120dp"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="______________________________________________________________"
        android:textColor="@color/colorBlack"
        android:gravity="left" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Lanuage"
        android:layout_marginLeft="15dp"
        android:gravity="left" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="______________________________________________________________"
        android:textColor="@color/colorBlack"
        android:gravity="left" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/signinButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Submit Request"
        android:onClick="SubmitRequest"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        app:iconGravity="textStart"
        android:backgroundTint="@color/colorAccent"
        app:cornerRadius="20dp"/>

</LinearLayout>