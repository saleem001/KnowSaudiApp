<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="20dp"
               android:text="  Home"
               android:textColor="@color/colorWhite"
               android:textSize="25dp"
               android:onClick="onHomeClick"
               android:drawableLeft="@drawable/ic_home_black_24dp"
               android:gravity="left"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="78dp"
               android:text="     My Profile"
               android:textColor="@color/colorWhite"
               android:textSize="25dp"
               android:onClick="onProfileClick"
               android:drawableLeft="@drawable/ic_person_white_24dp"
               android:gravity="left"/>

       </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="  My Rides"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:onClick="onMyRide"
                android:drawableLeft="@drawable/ic_library_books_black_24dp"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="45dp"
                android:text="  Tour Guid DB"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:onClick="onTourGuidDB"
                android:drawableLeft="@drawable/ic_crop_square_black_24dp"
                android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="  Rating"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:onClick="onRating"
                android:drawableLeft="@drawable/ic_tag_faces_black_24dp"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="75dp"
                android:text="    Tourist DB"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:onClick="onTouristDB"
                android:drawableLeft="@drawable/ic_crop_square_black_24dp"
                android:gravity="left"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text=" Pending Offers"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:onClick="onPendingOffrs"
                android:drawableLeft="@drawable/ic_list_black_24dp"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="   Admin DB"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:onClick="onAdminDB"
                android:drawableLeft="@drawable/ic_crop_square_black_24dp"
                android:gravity="left"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text=" User Management"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:onClick="onUsrMngmnt"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:text="  Settings"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:onClick="onSettingsClick"
                android:drawableLeft="@drawable/ic_settings_black_24dp"
                android:gravity="left"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>